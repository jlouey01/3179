{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/jlouey01/3179/refs/heads/main/Homework%20Week%2010/Formula1_2023season_raceResults.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "race_selection",
      "value": "Bahrain",
      "bind": {
        "input": "select",
        "options": [
          "Bahrain",
          "Saudi Arabia",
          "Australia",
          "Azerbaijan",
          "Miami",
          "Monaco",
          "Spain",
          "Canada",
          "Austria",
          "Great Britain",
          "Hungary",
          "Belgium",
          "Netherlands",
          "Italy",
          "Singapore",
          "Japan",
          "Qatar",
          "United States",
          "Mexico",
          "Brazil",
          "Las Vegas",
          "Abu Dhabi"
        ],
        "name": "Select Race"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Track == race_selection"
    },
    {
      "calculate": "datum.Position == 'NC' ? 21 : datum.Position == 'DQ' ? 22 : toNumber(datum.Position)",
      "as": "Adjusted Position"
    },
    {
      "calculate": "datum.Adjusted_Position == 21 ? 'NC' : datum.Adjusted_Position == 22 ? 'DQ' : datum.Position",
      "as": "Tooltip Position"
    }
  ],
  "encoding": {
    "y": {
      "field": "Driver",
      "type": "nominal",
      "title": "Driver",
      "sort": {
        "field": "Adjusted Position",
        "order": "ascending"
      },
      "axis": {"labelFontSize": 12}
    },
    "x": {
      "field": "Position Value",
      "type": "quantitative",
      "title": "Position",
      "scale": {"domain": [1, 22]},
      "axis": {
        "labelFontSize": 12,
        "labelExpr": "datum.value == 21 ? 'NC' : datum.value == 22 ? 'DQ' : datum.value"
      }
    }
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Starting Grid",
          "type": "quantitative",
          "title": ""
        },
        "y": {"field": "Driver"},
        "color": {
          "field": "Position Type",
          "type": "nominal",
          "scale": {"domain": ["Starting", "Finishing"], "range": ["#1f77b4", "#ff7f0e"]}, 
          "legend": {"title": "Position Type"}
        },
        "shape": {
          "field": "Position Type",
          "type": "nominal",
          "scale": {"domain": ["Starting", "Finishing"], "range": ["circle", "square"]}, 
          "legend": {"title": "Position Type"}
        },
        "tooltip": [
          {"field": "Track", "title": "Race Track"},
          {"field": "Driver", "title": "Driver"},
          {"field": "Starting Grid", "title": "Starting Position"}
        ]
      },
      "transform": [
        {
          "calculate": "'Starting'",
          "as": "Position Type"
        }
      ]
    },
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Adjusted Position",
          "type": "quantitative",
          "title": ""
        },
        "y": {"field": "Driver"},
        "color": {
          "field": "Position Type",
          "type": "nominal",
          "scale": {"domain": ["Starting", "Finishing"], "range": ["#1f77b4", "#ff7f0e"]}, 
          "legend": null
        },
        "shape": {
          "field": "Position Type",
          "type": "nominal",
          "scale": {"domain": ["Starting", "Finishing"], "range": ["circle", "square"]},
          "legend": null
        },
        "tooltip": [
          {"field": "Track", "title": "Race Track"},
          {"field": "Driver", "title": "Driver"},
          {
            "field": "Tooltip Position",
            "title": "Finishing Position"
          }
        ]
      },
      "transform": [
        {
          "calculate": "'Finishing'",
          "as": "Position Type"
        }
      ]
    },
    {
      "mark": {
        "type": "line",
        "strokeDash": [4, 4],
        "color": "gray"
      },
      "encoding": {
        "x": {"field": "Starting Grid", "type": "quantitative"},
        "x2": {"field": "Adjusted Position"},
        "y": {"field": "Driver"},
        "tooltip": [
          {"field": "Driver", "title": "Driver"}
        ]
      }
    }
  ],
  "title": "Starting vs Finishing Position per Driver"
}
